# =============================================================================
# Конфигурация PROD-окружения
# 3 LXC-контейнера с усиленными параметрами
# =============================================================================

# Количество LXC-контейнеров
lxc_count = 3

# CPU-ядра на контейнер (усиленная конфигурация)
lxc_cpus = 4

# RAM на контейнер в МБ (4 ГБ - умеренная конфигурация для размещения на нескольких нодах)
lxc_memory_mb = 4096

# Размер диска в ГБ
lxc_disk_gb = 20

# Префикс имени контейнеров
lxc_name_prefix = "prod-lxc"

# Начальный VMID (диапазон 300-399 для prod)
start_vmid = 300

# Начальное смещение IP-адресов (диапазон .140-.159 для prod)
ip_start_offset = 140

# Включить проверку ресурсов на нодах перед размещением
enable_resource_check = true
