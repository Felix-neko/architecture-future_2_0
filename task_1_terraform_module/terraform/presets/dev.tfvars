# =============================================================================
# Конфигурация DEV-окружения
# 1 LXC-контейнер с параметрами по умолчанию
# =============================================================================

# Количество LXC-контейнеров
lxc_count = 1

# CPU-ядра на контейнер (по умолчанию)
lxc_cpus = 2

# RAM на контейнер в МБ (2 ГБ - лёгкая конфигурация для dev)
lxc_memory_mb = 2048

# Размер диска в ГБ
lxc_disk_gb = 10

# Префикс имени контейнеров
lxc_name_prefix = "dev-lxc"

# Начальный VMID (диапазон 100-199 для dev)
start_vmid = 100

# Начальное смещение IP-адресов (диапазон .100-.119 для dev)
ip_start_offset = 100

# Включить проверку ресурсов на нодах перед размещением
enable_resource_check = true
