# =============================================================================
# Конфигурация окружения DEV-2
# Второй экземпляр dev-окружения с уникальными VMID и IP-адресами
# =============================================================================

# Количество LXC-контейнеров
lxc_count = 1

# CPU-ядра на контейнер
lxc_cpus = 2

# RAM на контейнер в МБ (2 ГБ)
lxc_memory_mb = 2048

# Размер диска в ГБ
lxc_disk_gb = 10

# Префикс имени контейнеров (уникальный для этого окружения)
lxc_name_prefix = "dev2-lxc"

# Начальный VMID (уникальный диапазон 110-119 для dev-2, не пересекается с dev-1)
start_vmid = 110

# Начальное смещение IP-адресов (диапазон .110-.119 для dev-2, не пересекается с dev-1)
ip_start_offset = 110

# Включить проверку ресурсов на нодах перед размещением
enable_resource_check = true
