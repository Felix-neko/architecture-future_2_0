# =============================================================================
# Конфигурация окружения DEV-1
# Первый экземпляр dev-окружения с уникальными VMID и IP-адресами
# =============================================================================

# Количество LXC-контейнеров
lxc_count = 1

# CPU-ядра на контейнер
lxc_cpus = 2

# RAM на контейнер в МБ (2 ГБ)
lxc_memory_mb = 4096

# Размер диска в ГБ
lxc_disk_gb = 10

# Префикс имени контейнеров (уникальный для этого окружения)
lxc_name_prefix = "dev1-lxc"

# Начальный VMID (уникальный диапазон 100-109 для dev-1)
start_vmid = 100

# Начальное смещение IP-адресов (диапазон .100-.109 для dev-1)
ip_start_offset = 100

# Включить проверку ресурсов на нодах перед размещением
enable_resource_check = true
